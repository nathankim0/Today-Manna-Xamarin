<ContentPage
    x:Class="TodaysManna.MannaPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local="clr-namespace:TodaysManna"
    Title="manna_page"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{AppThemeBinding Dark=Black,
                                      Light=White}"
    NavigationPage.BackButtonTitle=""
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False">

    <!--#region Resources-->
    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark=Black, Light=White}" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="VisualElement.BackgroundColor" Value="LightGray" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <!--#endregion-->

    <Grid x:Name="contentGrid" BackgroundColor="{AppThemeBinding Dark=Black, Light=White}">

        <CollectionView
            x:Name="mannaCollectionView"
            BackgroundColor="{AppThemeBinding Dark=Black,
                                              Light=White}"
            Footer="&#10;"
            ItemsSource="{Binding MannaContents}"
            SelectionChanged="OnMannaCollectionViewSelectionChanged"
            SelectionMode="Multiple"
            VerticalOptions="Fill"
            VerticalScrollBarVisibility="Always">
            <CollectionView.Header>
                <StackLayout
                    x:Name="collectionViewHeader"
                    Padding="20,10,20,10"
                    BackgroundColor="{AppThemeBinding Dark=Black,
                                                      Light=White}">
                    <Frame
                        x:Name="rangeButton"
                        BackgroundColor="{AppThemeBinding Dark=DarkGray,
                                                          Light=#e2e2e2}"
                        HasShadow="False">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAllRangeButtonTapped" />
                        </Frame.GestureRecognizers>
                        <StackLayout Margin="5">
                            <Label
                                x:Name="mannaRangeLabel"
                                FontSize="16"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="{Binding MannaShareRange}"
                                TextColor="{AppThemeBinding Dark=Black,
                                                            Light=Black}"
                                VerticalOptions="Center" />
                            <Label
                                x:Name="mcRangeLabel"
                                FontSize="16"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Center"
                                Text="{Binding McShareRange}"
                                TextColor="{AppThemeBinding Dark=Black,
                                                            Light=Black}"
                                VerticalOptions="Center" />
                        </StackLayout>
                    </Frame>
                    <StackLayout Orientation="Horizontal">
                        <Label
                            x:Name="verse"
                            FontAttributes="Bold"
                            FontSize="Subtitle"
                            HorizontalOptions="StartAndExpand"
                            Text="{Binding JsonMannaData.Verse}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            VerticalOptions="CenterAndExpand" />
                        <ImageButton
                            Margin="0,0,5,0"
                            Padding="8"
                            BackgroundColor="Transparent"
                            Clicked="OnMannaShareButtonClicked"
                            HorizontalOptions="End"
                            VerticalOptions="CenterAndExpand">
                            <ImageButton.Source>
                                <FontImageSource
                                    FontFamily="materialdesignicons"
                                    Glyph="{x:Static local:FontIcons.ShareVariant}"
                                    Size="30"
                                    Color="{AppThemeBinding Dark=White,
                                                            Light=Black}" />
                            </ImageButton.Source>
                        </ImageButton>
                    </StackLayout>
                </StackLayout>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="20,10,20,10" BackgroundColor="{AppThemeBinding Dark=Black, Light=White}">
                        <Label TextColor="{AppThemeBinding Dark=White, Light=Black}" VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="1.7" Text="{Binding Number}" />
                                    <Span LineHeight="1.7" Text=" " />
                                    <Span LineHeight="1.7" Text="{Binding MannaString}" />
                                </FormattedString>
                            </Label.FormattedText>
                            <Label.FontSize>
                                <OnPlatform
                                    x:TypeArguments="x:Double"
                                    Android="18"
                                    iOS="16" />
                            </Label.FontSize>
                        </Label>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Frame
            BackgroundColor="{AppThemeBinding Dark=Black,
                                              Light=White}"
            HasShadow="False"
            IsVisible="{Binding IsRefreshing}"
            VerticalOptions="Fill">
            <Label
                HorizontalOptions="Center"
                Text="만나 불러오는 중..."
                TextColor="{AppThemeBinding Dark=White,
                                            Light=Black}"
                VerticalOptions="Center">
                <Label.FontSize>
                    <OnPlatform
                        x:TypeArguments="x:Double"
                        Android="18"
                        iOS="16" />
                </Label.FontSize>
            </Label>
        </Frame>

        <DatePicker
            x:Name="mannaDatepicker"
            BackgroundColor="Transparent"
            DateSelected="OnDateSelected"
            IsVisible="false" />

        <!--#region HEADER-->
        <StackLayout
            x:Name="headerStackLayout"
            BackgroundColor="{AppThemeBinding Dark=Black,
                                              Light=White}"
            Style="{x:StaticResource HeaderStackLayoutStyle}">
            <Label Style="{x:StaticResource HeaderLabelStyle}" Text="만나" />
            <Grid
                BackgroundColor="{AppThemeBinding Dark=Black,
                                                  Light=White}"
                ColumnDefinitions="*,*,Auto"
                Style="{x:StaticResource HeaderGridStyle}">
                <ImageButton Clicked="OnRefreshButtonClicked" Style="{x:StaticResource HeaderButtonStyle}">
                    <ImageButton.Source>
                        <FontImageSource
                            FontFamily="materialdesignicons"
                            Glyph="{x:Static local:FontIcons.Refresh}"
                            Size="30"
                            Color="{AppThemeBinding Dark=White,
                                                    Light=Black}" />
                    </ImageButton.Source>
                </ImageButton>
                <ImageButton
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    Clicked="OnEnglishButtonClicked"
                    Style="{x:StaticResource HeaderButtonStyle}">
                    <ImageButton.Source>
                        <FontImageSource
                            FontFamily="materialdesignicons"
                            Glyph="{x:Static local:FontIcons.AlphabetLatin}"
                            Size="30"
                            Color="{AppThemeBinding Dark=White,
                                                    Light=Black}" />
                    </ImageButton.Source>
                </ImageButton>
                <StackLayout
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    HorizontalOptions="Center"
                    Spacing="0"
                    VerticalOptions="End">
                    <StackLayout.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMannaDateButtonClicked" />
                    </StackLayout.GestureRecognizers>
                    <Image
                        Margin="0,10,0,0"
                        HorizontalOptions="Center"
                        VerticalOptions="End">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="materialdesignicons"
                                Glyph="{x:Static local:FontIcons.CalendarBlank}"
                                Size="20"
                                Color="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        </Image.Source>
                    </Image>
                    <Label
                        Margin="0,-3,0,0"
                        FontSize="13"
                        HorizontalOptions="Center"
                        Text="{Binding DisplayDateRange}"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}" />
                </StackLayout>
            </Grid>
        </StackLayout>
        <!--#region HEADER-->

    </Grid>
</ContentPage>