<ContentPage
    x:Class="TodaysManna.MannaPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local="clr-namespace:TodaysManna"
    Title="manna_page"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{AppThemeBinding Dark=Black,
                                      Light=#F9F9F9}"
    NavigationPage.BackButtonTitle=""
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False">

    <!--#region Resources-->
    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark=Black, Light=White}" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="VisualElement.BackgroundColor" Value="LightGray" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <!--#endregion-->

    <Grid
        x:Name="contentGrid"
        BackgroundColor="{AppThemeBinding Dark=Black,
                                          Light=White}"
        RowDefinitions="Auto,*">

        <CollectionView
            x:Name="mannaCollectionView"
            Grid.Row="1"
            BackgroundColor="{AppThemeBinding Dark=Black,
                                              Light=White}"
            Footer="&#10;"
            ItemsSource="{Binding MannaContents}"
            SelectionChanged="OnMannaCollectionViewSelectionChanged"
            SelectionMode="Multiple"
            VerticalOptions="Fill"
            VerticalScrollBarVisibility="Always">

            <CollectionView.Header>

                <StackLayout
                    Margin="0,0,0,20"
                    Padding="20,0,20,0"
                    BackgroundColor="{AppThemeBinding Dark=Black,
                                                      Light=White}"
                    Orientation="Vertical">

                    <StackLayout
                        Padding="0,15,0,15"
                        BackgroundColor="{AppThemeBinding Dark=Black,
                                                          Light=White}"
                        Orientation="Horizontal">
                        <Label
                            FontAttributes="Bold"
                            FontSize="30"
                            HorizontalOptions="StartAndExpand"
                            Text="오늘의 만나를&#10;수확해볼까요? 🍐"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label
                            FontSize="22"
                            HorizontalOptions="End"
                            Text="{Binding DisplayDateRange}"
                            TextColor="#F7D8B4"
                            VerticalOptions="End">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnMannaDateButtonClicked" />
                            </Label.GestureRecognizers>
                        </Label>
                    </StackLayout>


                    <StackLayout
                        Padding="0,20,0,20"
                        BackgroundColor="{AppThemeBinding Dark=Black,
                                                          Light=White}"
                        Orientation="Horizontal">
                        <Label
                            FontAttributes="Bold"
                            FontSize="26"
                            HorizontalOptions="StartAndExpand"
                            Text="오늘의 범위"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            VerticalOptions="Center" />
                        <ImageButton
                            Clicked="OnAllRangeButtonTapped"
                            HorizontalOptions="End"
                            Opacity="0.3"
                            VerticalOptions="Center">
                            <ImageButton.Source>
                                <FontImageSource
                                    FontFamily="materialdesignicons"
                                    Glyph="{x:Static local:FontIcons.ShareVariant}"
                                    Size="20"
                                    Color="{AppThemeBinding Dark=White,
                                                            Light=Black}" />
                            </ImageButton.Source>
                        </ImageButton>
                    </StackLayout>

                    <Grid
                        Margin="0,10,0,0"
                        ColumnDefinitions="60,*"
                        RowDefinitions="*,*">
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            FontSize="22"
                            Text="만나"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label
                            x:Name="mannaRangeLabel"
                            Grid.Row="0"
                            Grid.Column="1"
                            FontSize="22"
                            Text="{Binding MannaShareRange}"
                            TextColor="Gray" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            FontSize="22"
                            Text="맥체인"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        <Label
                            x:Name="mcRangeLabel"
                            Grid.Row="1"
                            Grid.Column="1"
                            FontSize="22"
                            Text="{Binding McShareRange}"
                            TextColor="Gray" />
                    </Grid>


                    <StackLayout Orientation="Horizontal">
                        <Label
                            x:Name="verse"
                            FontAttributes="Bold"
                            FontSize="Subtitle"
                            HorizontalOptions="StartAndExpand"
                            Text="{Binding JsonMannaData.Verse}"
                            TextColor="{AppThemeBinding Dark=White,
                                                        Light=Black}"
                            VerticalOptions="CenterAndExpand" />

                        <ImageButton
                            Padding="8"
                            BackgroundColor="Transparent"
                            Clicked="OnRefreshButtonClicked"
                            HorizontalOptions="End">
                            <ImageButton.Source>
                                <FontImageSource
                                    FontFamily="materialdesignicons"
                                    Glyph="{x:Static local:FontIcons.Refresh}"
                                    Size="20"
                                    Color="{AppThemeBinding Dark=White,
                                                            Light=Black}" />
                            </ImageButton.Source>
                        </ImageButton>

                        <ImageButton
                            Padding="8"
                            BackgroundColor="Transparent"
                            Clicked="OnEnglishButtonClicked"
                            HorizontalOptions="End">
                            <ImageButton.Source>
                                <FontImageSource
                                    FontFamily="materialdesignicons"
                                    Glyph="{x:Static local:FontIcons.AlphabetLatin}"
                                    Size="20"
                                    Color="{AppThemeBinding Dark=White,
                                                            Light=Black}" />
                            </ImageButton.Source>
                        </ImageButton>

                        <ImageButton
                            Margin="0,0,5,0"
                            Padding="8"
                            BackgroundColor="Transparent"
                            Clicked="OnMannaShareButtonClicked"
                            HorizontalOptions="End"
                            VerticalOptions="Center">
                            <ImageButton.Source>
                                <FontImageSource
                                    FontFamily="materialdesignicons"
                                    Glyph="{x:Static local:FontIcons.ShareVariant}"
                                    Size="20"
                                    Color="{AppThemeBinding Dark=White,
                                                            Light=Black}" />
                            </ImageButton.Source>
                        </ImageButton>
                    </StackLayout>

                </StackLayout>
            </CollectionView.Header>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="20,10,20,10" BackgroundColor="{AppThemeBinding Dark=Black, Light=White}">
                        <Label TextColor="{AppThemeBinding Dark=White, Light=Black}" VerticalOptions="Center">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span LineHeight="1.7" Text="{Binding Number}" />
                                    <Span LineHeight="1.7" Text=" " />
                                    <Span LineHeight="1.7" Text="{Binding MannaString}" />
                                </FormattedString>
                            </Label.FormattedText>
                            <Label.FontSize>
                                <OnPlatform
                                    x:TypeArguments="x:Double"
                                    Android="18"
                                    iOS="16" />
                            </Label.FontSize>
                        </Label>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Frame
            BackgroundColor="{AppThemeBinding Dark=Black,
                                              Light=White}"
            HasShadow="False"
            IsVisible="{Binding IsRefreshing}"
            VerticalOptions="Fill">
            <Label
                HorizontalOptions="Center"
                Text="만나 불러오는 중..."
                TextColor="{AppThemeBinding Dark=White,
                                            Light=Black}"
                VerticalOptions="Center">
                <Label.FontSize>
                    <OnPlatform
                        x:TypeArguments="x:Double"
                        Android="18"
                        iOS="16" />
                </Label.FontSize>
            </Label>
        </Frame>

        <DatePicker
            x:Name="mannaDatepicker"
            BackgroundColor="Transparent"
            DateSelected="OnDateSelected"
            IsVisible="false" />

        <!--#region HEADER-->
        <StackLayout
            x:Name="headerStackLayout"
            BackgroundColor="{AppThemeBinding Dark=Black,
                                              Light=White}"
            Style="{x:StaticResource HeaderStackLayoutStyle}">
            <Label Style="{x:StaticResource HeaderLabelStyle}" Text="만나" />
            <Grid
                BackgroundColor="{AppThemeBinding Dark=Black,
                                                  Light=White}"
                ColumnDefinitions="*,*,Auto"
                Style="{x:StaticResource HeaderGridStyle}" />
        </StackLayout>
        <!--#region HEADER-->

    </Grid>
</ContentPage>