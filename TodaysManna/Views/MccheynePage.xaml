<ContentPage
    x:Class="TodaysManna.MccheynePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:local="clr-namespace:TodaysManna"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    Title="mccheyne_page"
    ios:Page.UseSafeArea="true"
    BackgroundColor="{AppThemeBinding Dark=Black,
                                      Light=White}"
    NavigationPage.BackButtonTitle=""
    NavigationPage.HasBackButton="False"
    NavigationPage.HasNavigationBar="False">

    <!--#region Resources-->
    <ContentPage.Resources>

        <Style TargetType="StackLayout">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark=Black, Light=White}" />
                            </VisualState.Setters>
                        </VisualState>
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="VisualElement.BackgroundColor" Value="LightGray" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>

        <DataTemplate x:Key="headerTemplate">
            <StackLayout Orientation="Horizontal">
                <Label
                    FontSize="12"
                    HorizontalOptions="StartAndExpand"
                    Text="{Binding MccheyneRange}"
                    TextColor="Gray" />

                <Grid ColumnDefinitions="Auto,*,Auto">
                    <ImageButton Grid.Column="0" VerticalOptions="Center">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="materialdesignicons"
                                Glyph="{x:Static local:FontIcons.ArrowLeft}"
                                Size="15"
                                Color="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        </ImageButton.Source>
                    </ImageButton>
                    <Label
                        Grid.Column="1"
                        FontSize="15"
                        Text="{Binding DisplayDateRange}"
                        TextColor="{AppThemeBinding Dark=White,
                                                    Light=Black}"
                        VerticalOptions="Center">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnDateButtonClicked" />
                        </Label.GestureRecognizers>
                    </Label>
                    <ImageButton Grid.Column="2" VerticalOptions="Center">
                        <ImageButton.Source>
                            <FontImageSource
                                FontFamily="materialdesignicons"
                                Glyph="{x:Static local:FontIcons.ArrowRight}"
                                Size="15"
                                Color="{AppThemeBinding Dark=White,
                                                        Light=Black}" />
                        </ImageButton.Source>
                    </ImageButton>
                </Grid>
            </StackLayout>
        </DataTemplate>

        <DataTemplate x:Key="contentTemplate">
            <StackLayout Padding="15,10,15,10" BackgroundColor="{AppThemeBinding Dark=Black, Light=White}">
                <Label
                    FontAttributes="Bold"
                    IsVisible="{Binding IsHalfVerseVisible}"
                    Text="{Binding HalfVerse}"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}">
                    <Label.FontSize>
                        <OnPlatform
                            x:TypeArguments="x:Double"
                            Android="20"
                            iOS="18" />
                    </Label.FontSize>
                </Label>
                <Label TextColor="{AppThemeBinding Dark=White, Light=Black}">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span LineHeight="1.7" Text="{Binding SecondNumber}" />
                            <Span LineHeight="1.7" Text=" " />
                            <Span LineHeight="1.7" Text="{Binding Content}" />
                        </FormattedString>
                    </Label.FormattedText>
                    <Label.FontSize>
                        <OnPlatform
                            x:TypeArguments="x:Double"
                            Android="18"
                            iOS="16" />
                    </Label.FontSize>
                </Label>
            </StackLayout>
        </DataTemplate>

        <Style x:Key="collectionViewStyle" TargetType="CollectionView">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark=Black, Light=White}" />
            <Setter Property="VerticalOptions" Value="Fill" />
            <Setter Property="ItemTemplate" Value="{x:StaticResource contentTemplate}" />
            <Setter Property="HeaderTemplate" Value="{x:StaticResource headerTemplate}" />
            <Setter Property="Header" Value="{Binding .}" />
            <Setter Property="VerticalScrollBarVisibility" Value="Always" />
            <Setter Property="Footer" Value="&#10;" />
            <Setter Property="SelectionMode" Value="Multiple" />

        </Style>

        <Style x:Key="tabViewItemStyle" TargetType="xct:TabViewItem">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Dark=Black, Light=White}" />
            <Setter Property="TextColor" Value="{AppThemeBinding Dark=White, Light=Black}" />
        </Style>
    </ContentPage.Resources>
    <!--#endregion Resources-->

    <Grid
        x:Name="outerGrid"
        BackgroundColor="{AppThemeBinding Dark=Black,
                                          Light=White}"
        Style="{x:StaticResource OuterGridStyle}">

        <StackLayout>
            <!--#region HEADER-->
            <StackLayout
                x:Name="headerStackLayout"
                BackgroundColor="{AppThemeBinding Dark=Black,
                                                  Light=White}"
                Style="{x:StaticResource HeaderStackLayoutStyle}">
                <Label
                    Style="{x:StaticResource HeaderLabelStyle}"
                    Text="맥체인"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}" />
            </StackLayout>
            <!--#region HEADER-->

            <CollectionView
                x:Name="mccheyneCollectionView"
                ItemsSource="{Binding MccheyneContents1}"
                SelectionChanged="OnMccheyneCollectionViewSelectionChanged"
                Style="{x:StaticResource collectionViewStyle}" />

        </StackLayout>

        <!--#region Toggle-->
        <Grid
            Margin="15,0,15,20"
            ColumnDefinitions="*,*,*,*"
            HeightRequest="38"
            HorizontalOptions="Fill"
            VerticalOptions="End">

            <!--  Toggle Background  -->
            <BoxView
                Grid.ColumnSpan="4"
                BackgroundColor="{AppThemeBinding Light=#F5F5F6,
                                                  Dark=#F5F5F6}"
                CornerRadius="16"
                HorizontalOptions="Fill"
                VerticalOptions="Fill" />

            <!--#region Toogle 1-->
            <Frame
                Margin="3"
                BackgroundColor="Transparent"
                CornerRadius="15"
                IsVisible="{Binding IsRange1Selected}" />
            <Frame
                x:Name="signUpToggleFrame"
                Margin="3,3,0,3"
                BackgroundColor="Transparent"
                CornerRadius="15">
                <Frame.Triggers>
                    <DataTrigger
                        Binding="{Binding IsRange1Selected}"
                        TargetType="Frame"
                        Value="True">
                        <Setter Property="BackgroundColor" Value="#fda51e" />
                    </DataTrigger>

                    <DataTrigger
                        Binding="{Binding IsRange1Selected}"
                        TargetType="Frame"
                        Value="False">
                        <Setter Property="BackgroundColor" Value="Transparent" />
                    </DataTrigger>
                </Frame.Triggers>
                <Label
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="{Binding MccheyneRange1}"
                    TextColor="#999BAC"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center">
                    <Label.Triggers>
                        <DataTrigger
                            Binding="{Binding IsRange1Selected}"
                            TargetType="Label"
                            Value="True">
                            <Setter Property="TextColor" Value="white" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRange1Tapped" />
                </Frame.GestureRecognizers>
            </Frame>
            <!--#endregion-->

            <!--#region Toogle 2-->
            <Frame
                Grid.Column="1"
                Margin="3"
                BackgroundColor="Transparent"
                CornerRadius="15"
                IsVisible="{Binding IsRange2Selected}" />
            <Frame
                Grid.Column="1"
                Margin="0,3,3,3"
                CornerRadius="14">
                <Frame.Triggers>
                    <DataTrigger
                        Binding="{Binding IsRange2Selected}"
                        TargetType="Frame"
                        Value="True">
                        <Setter Property="BackgroundColor" Value="#fda51e" />
                    </DataTrigger>

                    <DataTrigger
                        Binding="{Binding IsRange2Selected}"
                        TargetType="Frame"
                        Value="False">
                        <Setter Property="BackgroundColor" Value="Transparent" />
                    </DataTrigger>
                </Frame.Triggers>
                <Label
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="{Binding MccheyneRange2}"
                    TextColor="#999BAC"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center">
                    <Label.Triggers>
                        <DataTrigger
                            Binding="{Binding IsRange2Selected}"
                            TargetType="Label"
                            Value="True">
                            <Setter Property="TextColor" Value="white" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRange2Tapped" />
                </Frame.GestureRecognizers>
            </Frame>
            <!--#endregion-->

            <!--#region Toogle 3-->
            <Frame
                Grid.Column="2"
                Margin="3"
                BackgroundColor="Transparent"
                CornerRadius="15"
                IsVisible="{Binding IsRange3Selected}" />
            <Frame
                Grid.Column="2"
                Margin="0,3,3,3"
                CornerRadius="14">
                <Frame.Triggers>
                    <DataTrigger
                        Binding="{Binding IsRange3Selected}"
                        TargetType="Frame"
                        Value="True">
                        <Setter Property="BackgroundColor" Value="#fda51e" />
                    </DataTrigger>

                    <DataTrigger
                        Binding="{Binding IsRange3Selected}"
                        TargetType="Frame"
                        Value="False">
                        <Setter Property="BackgroundColor" Value="Transparent" />
                    </DataTrigger>
                </Frame.Triggers>
                <Label
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="{Binding MccheyneRange3}"
                    TextColor="#999BAC"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center">
                    <Label.Triggers>
                        <DataTrigger
                            Binding="{Binding IsRange3Selected}"
                            TargetType="Label"
                            Value="True">
                            <Setter Property="TextColor" Value="white" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRange3Tapped" />
                </Frame.GestureRecognizers>
            </Frame>
            <!--#endregion-->

            <!--#region Toogle 4-->
            <Frame
                Grid.Column="3"
                Margin="3"
                BackgroundColor="Transparent"
                CornerRadius="15"
                IsVisible="{Binding IsRange4Selected}" />
            <Frame
                Grid.Column="3"
                Margin="0,3,3,3"
                CornerRadius="14">
                <Frame.Triggers>
                    <DataTrigger
                        Binding="{Binding IsRange4Selected}"
                        TargetType="Frame"
                        Value="True">
                        <Setter Property="BackgroundColor" Value="#fda51e" />
                    </DataTrigger>

                    <DataTrigger
                        Binding="{Binding IsRange4Selected}"
                        TargetType="Frame"
                        Value="False">
                        <Setter Property="BackgroundColor" Value="Transparent" />
                    </DataTrigger>
                </Frame.Triggers>
                <Label
                    FontSize="14"
                    HorizontalOptions="Center"
                    Text="{Binding MccheyneRange4}"
                    TextColor="#999BAC"
                    VerticalOptions="Center"
                    VerticalTextAlignment="Center">
                    <Label.Triggers>
                        <DataTrigger
                            Binding="{Binding IsRange4Selected}"
                            TargetType="Label"
                            Value="True">
                            <Setter Property="TextColor" Value="white" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnRange4Tapped" />
                </Frame.GestureRecognizers>
            </Frame>
            <!--#endregion-->
        </Grid>
        <!--#endregion Toggle-->

        <Frame
            BackgroundColor="{AppThemeBinding Dark=Black,
                                              Light=White}"
            HasShadow="False"
            IsVisible="{Binding IsRefreshing}"
            VerticalOptions="Fill">
            <Label
                HorizontalOptions="Center"
                Text="맥체인 불러오는 중..."
                TextColor="{AppThemeBinding Dark=White,
                                            Light=Black}"
                VerticalOptions="Center">
                <Label.FontSize>
                    <OnPlatform
                        x:TypeArguments="x:Double"
                        Android="18"
                        iOS="16" />
                </Label.FontSize>
            </Label>
        </Frame>

        <DatePicker
            x:Name="datepicker"
            BackgroundColor="Transparent"
            DateSelected="OnDatePickerDateSelected"
            Format="D"
            IsVisible="false" />

    </Grid>
</ContentPage>