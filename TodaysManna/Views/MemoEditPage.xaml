<ContentPage
    x:Class="TodaysManna.MemoEditPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ScrollView>
        <StackLayout Margin="20" VerticalOptions="StartAndExpand">
            <Label
                
                Text="날짜"
                TextColor="{AppThemeBinding Dark=White,
                                            Light=Black}">
                <Label.FontSize>
                    <OnPlatform
                        x:TypeArguments="x:Double"
                        Android="20"
                        iOS="18" />
                </Label.FontSize>
            </Label>

            <Label
                Margin="0,10,0,0"
                Text="{Binding Date}"
                TextColor="{AppThemeBinding Dark=White,
                                            Light=Black}">
                <Label.FontSize>
                    <OnPlatform
                        x:TypeArguments="x:Double"
                        Android="16"
                        iOS="14" />
                </Label.FontSize>
            </Label>

            <Label
                Padding="0,15,0,0"
                
                Text="범위"
                TextColor="{AppThemeBinding Dark=White,
                                            Light=Black}">
                <Label.FontSize>
                    <OnPlatform
                        x:TypeArguments="x:Double"
                        Android="20"
                        iOS="18" />
                </Label.FontSize>
            </Label>

            <Label
                x:Name="verseLabel"
                Margin="0,10,0,0"
                Text="{Binding Verse}"
                TextColor="{AppThemeBinding Dark=White,
                                            Light=Black}">
                <Label.FontSize>
                    <OnPlatform
                        x:TypeArguments="x:Double"
                        Android="16"
                        iOS="14" />
                </Label.FontSize>
            </Label>

            <Label
                Padding="0,15,0,0"
                
                Text="메모"
                TextColor="{AppThemeBinding Dark=White,
                                            Light=Black}">
                <Label.FontSize>
                    <OnPlatform
                        x:TypeArguments="x:Double"
                        Android="20"
                        iOS="18" />
                </Label.FontSize>
            </Label>
            <StackLayout
                Margin="0,10,0,0"
                Padding="1"
                BackgroundColor="{AppThemeBinding Dark=White,
                                                  Light=Black}">
                <Editor
                    x:Name="memoEditor"
                    AutoSize="TextChanges"
                    BackgroundColor="{AppThemeBinding Dark=Black,
                                                      Light=White}"
                    Placeholder="메모 작성"
                    Text="{Binding Note}"
                    TextColor="{AppThemeBinding Dark=White,
                                                Light=Black}">
                    <Editor.FontSize>
                        <OnPlatform
                            x:TypeArguments="x:Double"
                            Android="16"
                            iOS="14" />
                    </Editor.FontSize>
                </Editor>
            </StackLayout>
            <StackLayout
                Padding="0,15,0,0"
                Orientation="Horizontal"
                Spacing="20">
                <Button Clicked="OnSaveClicked" Text="저장" />
                <Button Clicked="OnDeleteClicked" Text="삭제" />
                <Button Clicked="OnShareClicked" Text="공유" />
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>